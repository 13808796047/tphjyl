<script type="text/javascript">
    var result = 0;
    function checkForm(obj)
    {
        if (obj.bid.value <= 0){
        	new_alert("请选择充值银行");
            return false;
        }
        if (result > 0){
            if (result == 1){
            	new_alert("您现有建行卡为重复绑定，请更换存款银行或绑定新的建行卡");
                return false;
            } else if (result == 2){
                new_alert("您尚未绑定建行银行卡，请绑定");
                gotolink("卡号绑定");
                self.location="/security_userbankinfo.html";
                return false;
            }
        }
        if (obj.amount.value == ""){
        	new_alert("请输入限定内金额！");
            obj.amount.focus();
            return false;
        }
        var loadmin = document.getElementById("alertmin").value;
        if(parseInt(obj.amount.value,10) < parseInt(loadmin,10))
        {
        	new_alert("充值金额不能低于最低充值限额 ");
            $("#amount").val(loadmin);
            $("#chineseMoney").html( changeMoneyToChinese(loadmin) );
            return false;
        }
    }

