<script>

    function onclickgift(){
        $('#btngift').attr('disabled', 'disabled');
        hrefother('./gift_activitypoints.html?getmoney=1');
    }
   function lingqu(id) {
        var v_t=$(this).attr("data-type");
        if (confirm("是否确定领取？"))
        {
            $.ajax({
                type: "POST",
                url: "/activity/lingqu.html",
                data: { id: id },
                dataType: "json",
                global: false,
                success: function (data) {
                    if (data.code==1) {
                        alert(data.msg);
                        document.location.reload();
                    }
                    else {
                        alert(data.msg);
                    }
                },
                error: null,
                cache: false
            });
        }
    };

</script>