//从文件读取开奖号
function getDataFromFile() {
	var data=rf.readFileSync("E:/yhyl/App/App/OpenNumber.ini","utf-8");
	if(!data) return false;
	try{
		var arr = data.trim().split("\r\n");
		arr = arr[arr.length-1].trim().split("=");
