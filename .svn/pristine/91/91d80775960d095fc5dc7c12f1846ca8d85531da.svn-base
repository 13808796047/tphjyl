		function Selected($obj, value)
		{
			$obj.children('option').each(function(){
				//console.log($(this).val() == value);
				if($(this).val() == value)
				{
					this.selected = true;
					$obj.trigger('change');
					return;
				}	
			});
			
		}
	}	
	
