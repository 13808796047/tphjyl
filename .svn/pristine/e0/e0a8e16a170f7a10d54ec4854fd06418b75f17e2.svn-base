        <div class="list">
            <table>
                <thead>
                <tr>
                    <!--<th>提现编号</th>-->
                    <th>用户名</th>
                    <th>时间</th>
                    <th>金额</th>
                    <th>实际到账金额</th>
                    <th>状态</th>
                    <th>备注</th>
                </tr>
                </thead>
                <tbody>
                <?php  $rechargeTotal=0;$successTotal=0;?>
                {volist name="data" id="vo"}
                <tr>
                    <?php
                    $rechargeTotal+=$vo['amount'];
                    if($vo['state'] == 0){
                        $successTotal+=$vo['amount'];
                    }
                    ?>
                    <td>{$vo.username}</td>
                    <td><?=date("Y-m-d",$vo['actionTime'])?></td>
                    <td>{$vo.amount}</td>
                    <td>
                        {if condition="($vo.state == 0)"} {$vo.amount}
                        {else /} 0.00
                        {/if}
                    </td>
                    <td>
                        {switch name="$vo.state" }
                        {case value="0" break="1"}确认到帐{/case}
                        {case value="1" break="1"}用户申请{/case}
                        {case value="2" break="1"}已取消{/case}
                        {case value="3" break="1"}已支付{/case}
                        {case value="4" break="1"}提现失败{/case}
                        {case value="5" break="1"}后台删除{/case}
                        {default /}提现失败
                        {/switch}
                    </td>
                    <td>{$vo.info}</td>
                </tr>
                {/volist}
                {empty name="data"}
                <tr>
                    <td height="37" colspan="9" align="center">请选择查询条件之后进行查询</td>
                </tr>
                {/empty}
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="2"></th>
                    <th>{$rechargeTotal}</th>
                    <th>{$successTotal}</th>
                    <th colspan="3"></th>
                </tr>
                </tfoot>
            </table>
        </div>
        <div class="page" style="margin-left:15px">总计{$total}个记录, 分为{$totalPage} 页, 当前第 {$currentPage}页<SPAN ID="tPages"> &nbsp;
             <div style="display: inline-flex" class="page_right">
			  {$page}
		  </div>
&nbsp;</SPAN>
        </div>
    </div>
